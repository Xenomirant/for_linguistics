import xml.etree.ElementTree as ET

TRANSLIT_TABLE = {
"ӄ" : "q",
"қ" : "q",
"ӈ" : "ŋ",
"ҳ" : "χ",
"х" : "x",
"ӽ" : "ťə",
"њ" : "ɲ",
"љ" : "l’",
"ԓ" : "ɬ",
"а" : "a",
"б" : "b",
"в" : "v",
"г" : "g",
"д" : "d",
"е" : "jə",
"ё" : "jo",
"ж" : "ž",
"з" : "z",
"и" : "i",
"й" : "j",
"к" : "k",
"л" : "l",
"м" : "m",
"н" : "n",
"о" : "o",
"п" : "p",
"р" : "r",
"с" : "s",
"т" : "t",
"у" : "u",
"ф" : "f",
"ц" : "ts",
"ч" : "č",
"ш" : "š",
"ы" : "i",
"э" : "e",
"ю" : "ju",
"я" : "ja",
"ə" : "ə",
"ˀ" : "ˀ",
"-" : "-",
}


def translit_element(line):
    prev_sym = ''
    new_sym = ''
    result = ''
    for symbol in line:
            new_sym = TRANSLIT_TABLE.get(symbol.lower(), symbol)
            result += str(new_sym)
    return result

print('translit def ok')

filename = 'C:\Desktop\\volkovdict\\volkov_texts.xml'
filename_out = 'C:\Desktop\\volkovdict\\volkov_texts_out.xml'

def translit_file(filename, filename_out):
        tree = ET.parse(filename)
        root = tree.getroot()
        for element in root.findall("./word[@lang='itl']"):
            element.text = translit_element(element.text)

print('translit file def ok')

translit_file(filename, filename_out)

print('translit file trial ok')
